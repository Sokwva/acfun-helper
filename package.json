{
  "name": "acfun-helper-project",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev-win": "sh ./packages/scripts/build.sh && set BUILD_ENV=development && vite build --watch",
    "dev": "sh ./packages/scripts/build.sh && vite build --watch",
    "dev:live-win": "vite --config ./packages/scripts/vite.live.config.js",
    "dev:live": "sh ./packages/scripts/build.sh && vite --config ./packages/scripts/vite.live.config.js",
    "dev:fg": "sh ./packages/scripts/build.sh && vite build --watch --config ./packages/scripts/vite.fg.config.js",
    "debug": "npx --node-arg=--inspect-brk vite build --watch",
    "build": "sh ./packages/scripts/build.sh && vite build",
    "serve": "vite preview",
    "preview": "vite preview",
    "eslint": "eslint src/** --ext .js, .jsx, .ts, .tsx, .vue",
    "lintverfix": "eslint src/** --ext .js, .jsx, .ts, .tsx, .vue src --debug --fix",
    "lint": "lint-staged",
    "prettier": "prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**": [
      "prettier"
    ]
  },
  "commotlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "jquery": "^3.7.0",
    "sass": "^1.63.6",
    "terser": "^5.18.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.6",
    "@crxjs/vite-plugin": "2.0.0-beta.12",
    "@types/chrome": "^0.0.240",
    "@types/jquery": "^3.5.16",
    "@types/xmldom": "^0.1.31",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "commitlint": "^17.6.6",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "naive-ui": "^2.34.4",
    "prettier": "^3.0.0",
    "rollup": "^3.26.2",
    "tinykeys": "^2.1.0",
    "typescript": "^5.1.6",
    "unplugin-vue-components": "^0.25.1",
    "vfonts": "^0.0.3",
    "vite": "^4.4.2",
    "vue-tsc": "^1.8.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "ignorePatterns": [
      ".vue",
      "*.svg"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-essential",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "parser": "@typescript-eslint/recommended",
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "@typescript-eslint"
    ],
    "rules": {
      "no-undef": "off",
      "indent": 0,
      "linebreak-style": [
        0,
        "error",
        "window"
      ]
    }
  },
  "prettier": {
    "endOfLine": "auto"
  }
}