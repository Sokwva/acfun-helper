{
  "name": "acfun-helper-project",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev-win": "sh scripts/build.sh && set BUILD_ENV=development && vite build --watch",
    "dev": "sh scripts/build.sh && vite build --watch",
    "dev:live-win": "vite --config ./scripts/vite.live.config.js",
    "dev:live": "sh scripts/build.sh && vite --config ./scripts/vite.live.config.js",
    "dev:fg": "sh scripts/build.sh && vite build --watch --config scripts/vite.fg.config.js",
    "debug": "npx --node-arg=--inspect-brk vite build --watch",
    "build": "sh scripts/build.sh && vite build",
    "serve": "vite preview",
    "preview": "vite preview",
    "eslint": "eslint src/** --ext .js, .jsx, .ts, .tsx, .vue",
    "lintverfix": "eslint src/** --ext .js, .jsx, .ts, .tsx, .vue src --debug --fix",
    "lint": "lint-staged",
    "prettier": "prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**": [
      "prettier"
    ]
  },
  "commotlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "sass": "^1.53.0",
    "terser": "^5.14.2",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.3",
    "@crxjs/vite-plugin": "2.0.0-beta.12",
    "@types/chrome": "^0.0.193",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-vue": "^3.0.0",
    "commitlint": "^17.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "naive-ui": "^2.31.0",
    "prettier": "^2.7.1",
    "rollup": "^2.76.0",
    "typescript": "^4.6.4",
    "unplugin-vue-components": "^0.21.1",
    "vfonts": "^0.0.3",
    "vite": "^3.0.0",
    "vue-tsc": "^0.38.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "ignorePatterns": [
      ".vue",
      "*.svg"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-essential",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "parser": "@typescript-eslint/recommended",
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "@typescript-eslint"
    ],
    "rules": {
      "no-undef": "off",
      "indent": 0,
      "linebreak-style": [
        0,
        "error",
        "window"
      ]
    }
  },
  "prettier": {
    "endOfLine": "auto"
  }
}