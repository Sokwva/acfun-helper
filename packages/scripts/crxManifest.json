{
  "name": "AcFun助手",
  "description": "Open source, and extensible Web Browser Extension for acfun.cn.",
  "version": "0.0.3",
  "author": "ncb",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "notifications",
    "declarativeContent",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "src/Background/background.ts"
  },
  "host_permissions": [
    "*://*.acfun.cn/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.acfun.cn/*",
      "*://*.aixifan.com/*"
    ]
  },
  "homepage_url": "https://sokwva.gitlab.io/acfun-helper/",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "AcFun助手",
    "default_icon": "Logo/icon128.png",
    "default_popup": "src/UI/Popup/popup.html"
  },
  "options_page": "src/UI/Setting/setting.html",
  "icons": {
    "16": "public/Logo/icon16.png",
    "48": "public/Logo/icon48.png",
    "128": "public/Logo/icon128.png"
  },
  "omnibox": {
    "keyword": "ac"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.acfun.cn/*",
        "*://*.aixifan.com/*"
      ],
      "js": [
        "src/Frontend/frontend.ts"
      ],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "toggle": {
      "openAcFun": {
        "default": "Ctrl+Shift+A"
      },
      "description": "打开主站"
    },
    "watchLater": {
      "watchLaterStart": {
        "default": "Ctrl+Shift+W"
      },
      "description": "稍后再看"
    }
  }
}